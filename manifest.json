{
    "manifest_version": 3,
    "name": "Smart Tabs",
    "version": "2.1",
    "description": "Manage and search your tabs easily and save sessions for resuming your work",
    "permissions": ["tabs", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "commands": {
        "open-extension": {
          "suggested_key": {
            "default": "Alt+X" 
          },
          "description": "Open the extension popup"
        }
      }
  }
  